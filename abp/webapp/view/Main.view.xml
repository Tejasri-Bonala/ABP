<mvc:View
    controllerName="abp.controller.Main"
    xmlns:form="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:u="sap.ui.unified"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page class="customBackground">
        <Panel
            width="100%"
            backgroundDesign="Solid"
            class="panelb"
        >
            <content>
                <VBox
                    alignItems="Center"
                    width="100%"
                >
                    <!-- First Image -->
                    <FlexBox
                        justifyContent="Center"
                        alignItems="Center"
                        width="100%"
                    >
                        <Image
                            src="./images/spotit_300.png"
                            width="100%"
                            height="200px"
                            densityAware="false"
                            alt="Banner Image"
                        />
                    </FlexBox>

                    <!-- Second Image -->
                    <FlexBox
                        justifyContent="Center"
                        alignItems="Center"
                        width="100%"
                    >
                        <Image
                            src="./images/spot-it.png"
                            width="100%"
                            height="100px"
                            densityAware="false"
                            alt="Banner Image"
                        />
                    </FlexBox>
                </VBox>
            </content>
        </Panel>

        <Wizard
            id="CreateProductWizard"
            finishButtonText="Submit"
            currentStep="PricingStep"
            class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
        >
            <WizardStep
                id="ProductTypeStep"
                title="Category"
                activate="onActivate"
            >
                <!-- Radio Buttons Section -->
                <VBox width="100%">
                    <VBox
                        width="auto"
                        class="sapUiSmallMarginBottom"
                    >
                        <Title
                            text="Incident Type"
                            level="H5"
                        />
                        <HBox
                            alignItems="Center"
                            justifyContent="Start"
                            width="100%"
                        >
                            <RadioButtonGroup
                                selectedIndex="{/selectedIncidentType}"
                                columns="3"
                            >
                                <buttons>
                                    <RadioButton text="Incident" />
                                    <RadioButton text="Near Miss" />
                                    <RadioButton
                                        text="Observation"
                                        select="onObservationSelect"
                                    />
                                </buttons>
                            </RadioButtonGroup>
                        </HBox>
                    </VBox>
                </VBox>

                <!-- Compliance Function Heading -->
                <Title
                    text="Compliance Function"
                    level="H5"
                />

                <!-- Checkboxes Section -->
                <VBox width="100%">
                    <VBox
                        width="auto"
                        class="sapUiSmallMarginBottom"
                    >
                        <!-- Security CheckBox and Text -->
                        <HBox
                            alignItems="Center"
                            justifyContent="Start"
                            width="100%"
                        >
                            <CheckBox
                                text="Security"
                                selected="{/selectedSecurity}"
                                id="Security"
                                select="onSecuritySelect"
                            />
                        </HBox>
                        <HBox
                            alignItems="Center"
                            justifyContent="Start"
                            width="100%"
                        >
                            <Text
                                text="If Security is checked, then no other classification can also be checked."
                            />
                        </HBox>

                        <!-- Environment, Healthy & Safety, Marine CheckBoxes -->
                        <HBox
                            alignItems="Center"
                            justifyContent="Start"
                            width="100%"
                        >
                            <CheckBox
                                text="Environment"
                                selected="{/selectedEnvironment}"
                                id="Environment"
                                select="onClassificationSelect"
                            />
                            <CheckBox
                                text="Healthy &amp; Safety"
                                selected="{/selectedHealthy}"
                                id="Healthy"
                                select="onClassificationSelect"
                            />
                            <CheckBox
                                text="Marine"
                                selected="{/selectedMarine}"
                                id="Marine"
                                select="onClassificationSelect"
                            />
                        </HBox>
                    </VBox>
                </VBox>
            </WizardStep>

            <WizardStep
                id="ProductInfoStep"
                title="Location Details"
                activate="onActivate"
            >
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                >
                    <Label text="Port" />
                    <Select
                        id="ProductName"
                        change="validateProdInfoStep"
                        valueStateText="Select Port Location"
                    >
                        <core:Item
                            key="Select Port Location"
                            text="Select Port Location"
                        />
                        <core:Item
                            key="UKD"
                            text="UKD"
                        />
                        <core:Item
                            key="AYR"
                            text="AYR"
                        />
                    </Select>

                    <Label text="Location description" />
                    <Input value="{/Location}" />
                    <!-- <core:HTML
                                id="w3wMap"
                                content=""
                            /> -->
                    <Label text="Description of events" />

                    <IconTabBar
                        id="idIconTabBarNoIcons"
                        expanded="{device>/isNoPhone}"
                        class="sapUiResponsiveContentPadding"
                    >
                        <items>
                            <IconTabFilter
                                text="what3words"
                                key="what3words"
                            >
                                <content>
                                    <Input
                                        id="w3wInput"
                                        value="{/what3words}"
                                    />
                                    <HBox alignItems="Center">
                                        <Text text="Use " />
                                        <Link
                                            text="what3words"
                                            press="onWhat3WordsLinkPress"
                                            class="sapUiSmallMarginStart"
                                        />
                                        <Text
                                            text=" to get the w3w address"
                                            class="sapUiSmallMarginStart"
                                        />
                                    </HBox>
                                    <Button
                                        text="Hide Map"
                                        press="onHideMapPress"
                                        visible="{= ${/mapVisible} }"
                                    />
                                </content>
                                <core:HTML
                                    id="w3wMap"
                                    content=""
                                />
                            </IconTabFilter>

                            <IconTabFilter
                                text="Lat/Long"
                                key="Lat"
                            >
                                <VBox>
                                    <Text text="WGS84" />

                                    <HBox>
                                        <Input value="{/latitude}" />
                                        <Input value="{/longitude}" />
                                        <Input value="{/longitude}" />
                                        <Select
                                            id="loc"
                                            change="validateProdInfoStep"
                                            valueStateText="Select Location"
                                        >
                                            <core:Item
                                                key="north"
                                                text="North"
                                            />
                                            <core:Item
                                                key="south"
                                                text="South"
                                            />
                                        </Select>
                                    </HBox>
                                    <HBox>
                                        <Input value="{/latitude}" />
                                        <Input value="{/longitude}" />
                                        <Input value="{/longitude}" />
                                        <Select
                                            id="loc1"
                                            change="validateProdInfoStep"
                                            valueStateText="Select Location"
                                        >
                                            <core:Item
                                                key="east"
                                                text="East"
                                            />
                                            <core:Item
                                                key="west"
                                                text="West"
                                            />
                                        </Select>
                                    </HBox>
                                </VBox>
                            </IconTabFilter>

                            <IconTabFilter
                                text="Lat/Long (decimal)"
                                key="Long"
                            >
                                <VBox>
                                    <Text text="Latitude, Longitude" />
                                    <Input value="{/Long}" />
                                    <HBox>
                                        <Text text="Use " />
                                        <Link
                                            text="Google Maps"
                                            href="https://www.google.com/maps/"
                                            target="_blank"
                                            class="sapUiSmallMarginStart"
                                        />
                                        <Text
                                            text=" to get the decimal Lat/Long."
                                            class="sapUiSmallMarginStart"
                                        />
                                    </HBox>
                                </VBox>
                            </IconTabFilter>
                        </items>
                    </IconTabBar>
                </form:SimpleForm>
            </WizardStep>

<WizardStep
                id="EventDetails"
                title="Event Details"
                activate="onActivate"
            >
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                >
                    <Label text="Title" />
                    <VBox>
                        <HBox>
                            <Text
                                text="Use appropriate language. Remember, everything you write could potentially be releasable, including directly to the individual/s mentioned in this Spot-It."
                            />
                        </HBox>
                        <Input value="{/Title}" />
                    </VBox>
                    <Label text="Date/time event occurred" />
                    <DateTimePicker value="{
				path: '/dtValue'}" />
                    <Label text="Description of events" />
                    <TextArea
                        value="{/productDescription}"
                        rows="8"
                    />

                    <Label
                        text="What action did you take? If none, what action could be taken? (optional)"
                    />
                    <TextArea
                        value="{/productDescription}"
                        rows="8"
                    />
                </form:SimpleForm>
            </WizardStep>


            <WizardStep
                id="OptionalInfoStep"
                title="Attachments"
                activate="onActivate"
            >
                <Text
                    text="Upload photos of the situation. Click 'Browse' to find photos on your computer and then click 'Upload' to attach. Each photo can be a maximum of 8MB."
                />
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                >
                    <Label text="Cover photo" />
                    <u:FileUploader
                        id="fileUploader"
                        width="400px"
                        tooltip="Upload product cover photo to the local server"
                        style="Emphasized"
                        placeholder="Choose a file for Upload..."
                        multiple="true"
                        change="onFileUploaderChange"
                    />
                </form:SimpleForm>

                <List
                    id="fileList"
                    items="{/files}"
                >
                    <CustomListItem>
                        <HBox alignItems="Center">
                            <StandardListItem title="{fileName}" />
                            <Button
                                icon="sap-icon://decline"
                                type="Transparent"
                                press="onDeleteItem"
                            />
                        </HBox>
                    </CustomListItem>
                </List>

                <Button
                    id="uploadButton"
                    text="Upload"
                    press="onUpload"
                    visible="{= ${/files}.length > 0 }"
                />
            </WizardStep>

            <WizardStep
                id="PricingStep"
                title="Your Details"
                activate="onActivate"
            >
                <form:SimpleForm
                    editable="true"
                    layout="ResponsiveGridLayout"
                >
                    <Label text="Name (optional)" />
                    <Input value="{/Name}" />
                    <Label text="Your Telephone (optional)" />
                    <Input value="{/Telephone}" />
                    <Label text="Your Email(optional)" />
                    <VBox>
                        <HBox>
                            <CheckBox
                                text="Receipt only"
                                id="email"
                            />
                        </HBox>
                        <Input value="{/Email}" />
                        <Text
                            text="You do not have to give your name/telephone/email, but if you do we will be able to provide you with any feedback.
If you would like an email receipt but not to submit your email as part of this report, you can do this by selecting 'Receipt only'."
                        />
                    </VBox>
                </form:SimpleForm>
            </WizardStep>
        </Wizard>
    </Page>
</mvc:View>
